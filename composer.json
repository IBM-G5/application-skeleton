{
    "name": "sumocoders/application-skeleton",
    "type": "project",
    "license": "MIT",
    "description": "A skeleton to start a new SumoCoders application",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/flex": "^1.6.2",
        "symfony/website-skeleton": "^5.0",
        "symfony/security-bundle": "^5.0",
        "symfony/apache-pack": "^1.0.1",
        "symfony/webpack-encore-bundle": "^1.6.2",
        "sumocoders/framework-core-bundle": "dev-symfony-5",
        "tijsverkoyen/convert-to-junit-xml": "^1.6",
        "beberlei/doctrineextensions": "^1.2",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "sentry/sentry-symfony": "^3.1"
    },
    "require-dev": {
        "mglaman/phpstan-junit": "^0.12",
        "phpstan/phpstan-symfony": "^0.12.4",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "tijsverkoyen/deployer-sumo": "^1.4",
        "symfony/debug-pack": "*"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": [
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "php scripts/post-update-cmd.php",
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "php scripts/post-create-project-cmd.php"
        ]
    }
}
