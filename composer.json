{
    "name": "sumocoders/application-skeleton",
    "type": "project",
    "license": "MIT",
    "description": "A skeleton to start a new SumoCoders application",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "sentry/sentry-symfony": "^3.1",
        "symfony/apache-pack": "^1.0.1",
        "symfony/dotenv": "^4.3",
        "symfony/flex": "^1.4.5",
        "symfony/webpack-encore-bundle": "^1.6.2",
        "symfony/website-skeleton": "^4.3"
    },
    "require-dev": {
        "mglaman/phpstan-junit": "^0.11.2",
        "phpstan/phpstan-symfony": "^0.11.6",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/debug-pack": "*",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/web-server-bundle": "*",
        "tijsverkoyen/deployer-sumo": "^1.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": [
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "php scripts/post-create-project-cmd.php"
        ]
    }
}
